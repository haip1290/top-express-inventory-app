<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include("partials/errors.ejs") %>
    <fieldset>
      <legend><%= title %></legend>
      <form method="POST" action="/category/<%= id %>/update">
        <label for="category">Name:</label>
        <input type="text" id="category" name="name" value="<%= name %>" />
        <button type="submit">Update</button>
      </form>
    </fieldset>
  </body>
</html>
