<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <a href="/">View Categories</a>
    <a href="/item/add?categoryId=<%= categoryId %>">Add Item</a>
    <ul>
      <% items.map((item) => { %>
      <li>
        Name:
        <%= item.name %>
        Quantity:
        <%= item.quantity %>
        Price: $<%= item.price %>
        <form
          action="/item/<%= item.id %>/delete?categoryId=<%= categoryId %>"
          method="post"
        >
          <button
            type="submit"
            onclick="return confirm(`delete ${item.name}?`)"
          >
            Delete
          </button>
        </form>
        <a href="/item/<%= item.id %>/update">Edit</a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
