<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
      name="viewport"
    />
    <meta content="ie=edge" http-equiv="X-UA-Compatible" />
    <title><%= title %></title>
  </head>
  <body>
    <h1>
      Welcome to
      <%= title %>
    </h1>
    <h2>Categories</h2>
    <% if(error){ %>
    <div>
      <strong>Error: </strong
      ><%= error %>
    </div>
    <% } %>
    <% if(query.deleted){ %>
    <div>Deleted successfully</div>
    <% } %>
    <ul>
      <% categories.map((category) =>{ %>
      <li>
        <a href="/category/<%= category.id %>?name=<%= category.name %>"
          ><%= category.name %></a
        >
        <a href="/category/<%= category.id %>/update">Edit</a>
        <form action="/category/<%= category.id %>/delete" method="POST">
          <button
            type="submit"
            onclick="return confirm(`deleting ${category.name}`)"
          >
            Delete
          </button>
        </form>
      </li>
      <% }) %>
    </ul>
    <a href="/category/create">Add Category</a>
  </body>
</html>
